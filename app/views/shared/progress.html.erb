<% content_for :page_title do %>Rebuilding by OpenHistoricalMap<% end %>

<% content_for :dynamic_js do %>
  <%= stylesheet_link_tag    "fixer", :media => "all" %>
  <%= stylesheet_link_tag    "progress", :media => "all" %>
  <%= stylesheet_link_tag    "lib/vendor/MarkerCluster", :media => "all" %>
  <%= stylesheet_link_tag    "lib/vendor/MarkerCluster.Default", :media => "all" %>
  <!--[if lte IE 8]>
  <%= stylesheet_link_tag    "lib/vendor/MarkerCluster.Default.ie", :media => "all" %>
  <![endif]-->

  <%= javascript_include_tag "lib/vendor/leaflet.markercluster" %>
  <%= javascript_include_tag "lib/nypl_progress" %>
  <%= javascript_include_tag type, {:id => "progressjs", "data-server" => CGI.escape("#{request.protocol}#{request.host_with_port}"), "data-progress" => progress, "data-mode" => mode} %>

<% end %>


<%= render :partial => "partials/nav" %>

<%= render :partial => "partials/main_container", locals: {css_class: "progress", legend: legend, type: type, mode: mode} %>

<%= link_to (content_tag "span","OpenHistoricalMap"), "http://openhistoricalmap.org", {:class => "nypl-logo", :title => "Visit OpenHistoricalMap.org, our parent project", :id=>"nypl-mini"} %>
